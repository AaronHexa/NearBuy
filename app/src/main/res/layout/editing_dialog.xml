<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Edit Profile"
            android:textColor="@color/coloLightOrange"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageEdited"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/guest_icon"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlueUI"
        android:textColorHint="@color/colorLightBlueUI"
        android:backgroundTint="@color/colorLightBlueUI"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/nameEditAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Please Fill in Username correctly"
        android:textColor="@color/colorLightRed"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <EditText

        android:id="@+id/phoneNumEdit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlueUI"
        android:textColorHint="@color/colorLightBlueUI"
        android:backgroundTint="@color/colorLightBlueUI"
        android:inputType="phone"
        android:hint="Phone"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/phoneEditAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Please Fill in Password correctly"
        android:textColor="@color/colorLightRed"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@color/colorLightBlueUI"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maleGenderEdit"
            android:padding="15dp"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:text="Male"
            android:textSize="22sp"
            android:background="@drawable/round_btn_selection"
            android:textColor="@color/colorBlack"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/femaleGenderEdit"
            android:padding="15dp"
            android:paddingStart="38dp"
            android:paddingEnd="38dp"
            android:text="Female"
            android:textSize="22sp"
            android:background="@drawable/round_btn_selection"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

    <TextView
        android:id="@+id/genderEditAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Please Select 1 Gender"
        android:textColor="@color/colorLightRed"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginBottom="18dp"
        />
</LinearLayout>
