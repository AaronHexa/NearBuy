<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterMainActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/registerLayout"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Regisration"
                android:textSize="38sp"
                android:textStyle="bold"
                android:textColor="@color/coloLightOrange"/>

            <ImageView
                android:id="@+id/userPicSet"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/guest_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/emailRegister"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:hint="Email (e.g.@hotmail.com,etc)"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/colorLightBlue"
                android:textColorHint="@color/colorLightBlue"
                android:textColor="@color/colorLightBlue"/>

            <TextView
                android:id="@+id/emailRegisterAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Please Fill In Correctly"
                android:textColor="@color/colorLightRed"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                />

            <EditText
                android:id="@+id/passwordRegister"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:hint="Password (6 character Above)"
                android:inputType="textPassword"
                android:backgroundTint="@color/colorLightBlue"
                android:textColorHint="@color/colorLightBlue"
                android:textColor="@color/colorLightBlue"/>

            <TextView
                android:id="@+id/passwordRegisterAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Please Fill In Correctly"
                android:textColor="@color/colorLightRed"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                />

            <EditText
                android:id="@+id/nameRegister"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:backgroundTint="@color/colorLightBlue"
                android:textColorHint="@color/colorLightBlue"
                android:textColor="@color/colorLightBlue"/>

            <TextView
                android:id="@+id/nameRegisterAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Please Fill In Correctly"
                android:textColor="@color/colorLightRed"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/maleGenderRegister"
                    android:padding="15dp"
                    android:paddingStart="45dp"
                    android:paddingEnd="45dp"
                    android:text="Male"
                    android:textSize="22sp"
                    android:background="@drawable/round_btn_selection"
                    android:textColor="@color/colorBlack"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/femaleGenderRegister"
                    android:padding="15dp"
                    android:paddingStart="38dp"
                    android:paddingEnd="38dp"
                    android:text="Female"
                    android:textSize="22sp"
                    android:background="@drawable/round_btn_selection"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <TextView
                android:id="@+id/genderRegisterAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Please Select One of the Gender"
                android:textColor="@color/colorLightRed"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                />

            <EditText
                android:id="@+id/phoneRegister"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:hint="Phone (e.g. 0125745843)"
                android:inputType="phone"
                android:backgroundTint="@color/colorLightBlue"
                android:textColorHint="@color/colorLightBlue"
                android:textColor="@color/colorLightBlue"/>

            <TextView
                android:id="@+id/phoneRegisterAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Please Fill In Correctly"
                android:textColor="@color/colorLightRed"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:text="Register"
                android:background="@drawable/round_corner_box"
                android:elevation="5dp"
                android:translationZ="4dp"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>